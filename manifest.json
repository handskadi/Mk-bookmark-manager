{
  "manifest_version": 3,
  "name": "MK Bookmark Manager",
  "version": "1.2",
  "description": "Organize bookmarks into categories. Auto favicon. Clean UI.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
