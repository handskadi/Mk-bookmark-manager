{
  "manifest_version": 3,
  "name": "MK Bookmark Manager PRO",
  "version": "2.0",
  "description": "Organize, reorder, and collapse bookmark categories with auto-favicons.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
