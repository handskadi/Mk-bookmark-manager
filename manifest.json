{
  "manifest_version": 3,
  "name": "MK Bookmark Manager",
  "short_name": "MK Bookmarks",
  "version": "1.2",
  "description": "Organize bookmarks into categories. Auto favicon. Clean UI.",
  "author": "Mohamed KADI",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Open MK Bookmark popup"
    }
  }
}
